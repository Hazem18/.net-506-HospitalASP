<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title> Complete Appointment</title>
    <link rel="stylesheet" href="~//lib/bootstrap/dist/css/bootstrap.min.css">

</head>
<body>
    <div class="container mt-5">
        <h2>Complete Appointment with Doctor @Model.Name</h2>
        <form action="/Home/CompleteAppointment" id="appointmentForm" onsubmit="return validateForm()" method="post">
            <!-- Patient Name Field -->
            <div class="mb-3">
                <label for="patientName" class="form-label">Patient Name</label>
                <input type="text" class="form-control" id="patientName" name="PatientName" required>
            </div>

            <!-- Date Field -->
            <div class="mb-3">
                <label for="appointmentDate" class="form-label">Date</label>
                <input type="date" class="form-control" id="appointmentDate" name="Day" required>
            </div>

            <!-- Time Field -->
            <div class="mb-3">
                <label for="appointmentTime" class="form-label">Time</label>
                <input type="time" class="form-control" id="appointmentTime" name="Hour" required >
            </div>

            <div class="mb-3">
                <label for="DoctorName" class="form-label">Doctor Name</label>
                <input type="text" class="form-control" id="DoctorName" name="DoctorName" value="@Model.Name" readonly required>
            </div>


            <!-- Submit Button -->
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>

    <script>
        function validateForm() {
            // Get the form fields
            const patientName = document.getElementById('patientName').value.trim();
            const appointmentDate = document.getElementById('appointmentDate').value;
            const appointmentTime = document.getElementById('appointmentTime').value;

            // Check if all fields are filled
            if (!patientName || !appointmentDate || !appointmentTime) {
                alert("All fields must be filled out!");
                return false;
            }

            // Display a success message after clicking the button
            alert("Appointment submitted successfully!");
            return true;
        }
    </script>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
